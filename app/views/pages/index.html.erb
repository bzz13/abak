<% title "Pages" %>

<table>
  <tr>
<!--    <th>Parent</th>  -->
    <th style="width:200px;">Name</th>
    <th>Content</th>
  </tr>
  <% for page in @pages %>
    <tr>
<!--      <td><%= page.parent_id %></td> -->
      <td>
        <p>
<% for p in page.ancestors.reverse %>
          <span style="padding-left:<%= 30 *  page.ancestors.reverse.index(p)      %>tx!important;"> <%= p.name %> </span><br/>
          <span style="padding-left:<%= 30 * (page.ancestors.reverse.index(p) + 1) %>px!important;"> +---  </span>
<% end %>  
          <b><%= page.name %></b>
        </p> 
      </td>
      <td class="index__page__content"><%= page.content %></td>
      <td><%= link_to "Show", page %></td>
      <td><%= link_to "Edit", edit_page_path(page) %></td>
      <td><%= link_to "Destroy", page, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Page", new_page_path %></p>
